{
  "name": "zakapp-server",
  "version": "1.0.0",
  "description": "zakapp backend server",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server/src/app.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/app.ts",
    "dev:old": "nodemon index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write src/",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:seed": "ts-node prisma/seed.ts",
    "db:seed:dev": "ts-node --transpile-only scripts/seed-dev-data.ts",
    "migrate:snapshots-to-nisab": "ts-node --transpile-only prisma/migrations/migrate-snapshots-to-nisab.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@types/compression": "^1.8.1",
    "@types/node-fetch": "^2.6.13",
    "@zakapp/shared": "file:../shared",
    "axios": "^1.13.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.1.1",
    "helmet": "^7.2.0",
    "hijri-converter": "^1.1.1",
    "jsonwebtoken": "^9.0.2",
    "moment-hijri": "^3.0.0",
    "morgan": "^1.10.1",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.7.0",
    "redis": "^4.6.13",
    "uuid": "^13.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.12",
    "@types/jsdom": "^27.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/moment-hijri": "^2.1.4",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.6.0",
    "@types/node-cron": "^3.0.11",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "jest": "^29.7.0",
    "jsdom": "^27.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^6.16.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "directories": {
    "test": "tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}