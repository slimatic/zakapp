{
  "name": "zakapp-server",
  "version": "0.10.0",
  "description": "zakapp backend server",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server/src/app.js",
    "dev": "nodemon --exec ts-node -r tsconfig-paths/register src/app.ts",
    "dev:old": "nodemon index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:seed": "ts-node prisma/seed.ts",
    "db:seed:dev": "ts-node --transpile-only scripts/seed-dev-data.ts",
    "db:backup": "ts-node --transpile-only scripts/backup-database.ts",
    "migrate:snapshots-to-nisab": "ts-node --transpile-only prisma/migrations/migrate-snapshots-to-nisab.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "@types/compression": "^1.8.1",
    "@types/node-fetch": "^2.6.13",
    "@types/nodemailer": "^7.0.5",
    "@zakapp/shared": "file:../shared",
    "axios": "^1.13.0",
    "bcryptjs": "^3.0.2",
    "cheerio": "^1.0.0-rc.10",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "fs-extra": "^11.1.1",
    "helmet": "^7.2.0",
    "hijri-converter": "^1.1.1",
    "jsonwebtoken": "^9.0.2",
    "moment-hijri": "^3.0.0",
    "morgan": "^1.10.1",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.12",
    "redis": "^4.6.13",
    "resend": "^6.4.2",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^13.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/moment-hijri": "^2.1.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.18.0",
    "@types/node-cron": "^3.0.11",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "jsdom": "^24.1.1",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "prisma": "^6.1.0",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "unplugin-swc": "^1.5.1",
    "vite": "^6.4.1",
    "vitest": "^3.2.4"
  },
  "directories": {
    "test": "tests"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
