// Temporary augmentation to help tests compile when the Prisma client hasn't
// been regenerated in the test environment due to permission constraints.
// Once `npx prisma generate` is runnable in CI, this can be removed.
declare module '@prisma/client' {
  interface PrismaClient {
    // eslint-disable-next-line @typescript-eslint/no-explicit-any
    encryptionRemediation: any;
    // Allow access to other models during test runs when generated client is not
    // available due to permission restrictions in the environment.
    // eslint-disable-next-line @typescript-eslint/no-explicit-any
    [key: string]: any;
  }

  // Minimal type shims for commonly used model types to let tests compile
  export type PaymentRecord = any;
  export type YearlySnapshot = any;
  export type ZakatCalculation = any;
  export type Asset = any;
  export type Liability = any;
  export type User = any;
  export type TestResult = any;
  export type MigrationRecord = any;
  export type EncryptionRemediation = any;
  export type ZakatPayment = any;
  export type ReminderEvent = any;
  export type AnnualSummary = any;
  export type AnalyticsMetric = any;

  // Minimal Prisma namespace shims used in tests
  export namespace Prisma {
    export type YearlySnapshotWhereInput = any;
    export type YearlySnapshotCreateInput = any;
    export type YearlySnapshotUpdateInput = any;
    export type YearlySnapshotUncheckedCreateInput = any;
  }
}

