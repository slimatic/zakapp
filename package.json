{
  "name": "zakapp",
  "version": "0.10.0",
  "description": "A user-friendly, self-hosted Zakat application with modern UI",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"npm run server:dev\" \"npm run client:dev\"",
    "start": "npm run dev",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm start",
    "build": "cd client && npm run build && cd ../server && npm run build && cd ../cli && npm run build",
    "install:all": "npm install --legacy-peer-deps && cd server && npm install --legacy-peer-deps && cd ../client && npm install --legacy-peer-deps && cd ../cli && npm install --legacy-peer-deps",
    "install-all": "npm run install:all",
    "clean": "pkill -f 'react-scripts' || true && pkill -f 'ts-node' || true",
    "reset": "npm run clean && npm run dev",
    "docker:build": "docker build -t zakapp .",
    "docker:run": "docker run -p 3000:3000 -v zakapp-data:/app/data zakapp",
    "test": "npm run test:server && npm run test:client && npm run test:cli",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "test:cli": "cd cli && npm test",
    "test:e2e": "echo 'Playwright tests removed'",
    "normalize:payments": "cd server && npx ts-node ./scripts/normalize-payments.ts"
  },
  "keywords": [
    "zakat",
    "islam",
    "calculator",
    "self-hosted",
    "finance"
  ],
  "author": "zakapp contributors",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@types/express": "5.0.3",
    "@types/supertest": "6.0.3",
    "concurrently": "^8.2.2",
    "express-validator": "^7.3.1",
    "supertest": "7.1.4",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@prisma/client": "6.16.2",
    "@zakapp/shared": "file:shared",
    "prisma": "6.16.2",
    "js-sha256": "^0.10.0"
  }
}