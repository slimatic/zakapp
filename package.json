{
  "name": "zakapp",
  "version": "1.0.0",
  "description": "A user-friendly, self-hosted Zakat application with modern UI",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "docker:build": "docker build -t zakapp .",
    "docker:run": "docker run -p 3000:3000 -v zakapp-data:/app/data zakapp"
  },
  "keywords": ["zakat", "islam", "calculator", "self-hosted", "finance"],
  "author": "zakapp contributors",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}